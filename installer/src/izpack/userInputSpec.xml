<!--
    User Inputs section.
-->
<userInput>
  <panel order="0">
    <field type="staticText" align="left"  txt="Network Configuration"  id="staticText.text1"/>
    <field type="divider" align="top"/>
    <field type="text" variable="INSTALL_JETTY_HOSTNAME">
      <description align="left"  id="description1"/>
      <spec txt="HTTP Server:" id="jettyserver.host" size="12" set="localhost"/>
    </field>
    <field type="text" variable="INSTALL_JETTY_PORT">
      <description align="left" id="description2"/>
      <spec txt="HTTP Port:" id="jettyserver.port" size="6" set="8080"/>
    </field>
    <field type="text" variable="INSTALL_REPORTS_PORT">
      <description align="left" id="description3"/>
      <spec txt="LOG4J Port:" id="reportserver.port" size="6" set="1055"/>
    </field>

    <field type="space" />

    <field type="staticText" align="left"  txt="Default Login"  id="staticText.text2"/>
    <field type="divider" align="top"/>
    <field type="text" variable="INSTALL_JETTY_USERNAME">
      <description align="left"  id="description4"/>
      <spec txt="User name:" id="install.path" size="6" set="default"/>
    </field>
    <field type="text" variable="INSTALL_JETTY_PASSWORD">
      <description align="left"  id="description5"/>
      <spec txt="Password:" id="install.path" size="6" set="default"/>
    </field>

    <field type="space" />

    <field type="staticText" align="left"  txt="Default Project"  id="staticText.text3"/>
    <field type="divider" align="top"/>
    <field type="text" variable="INSTALL_PROJECT_NAME">
      <description align="left" id="description6"/>
      <spec txt="Name:" id="project.name" size="6" set="default"/>
    </field>
    <field type="text" variable="INSTALL_PROJECT_DESC">
      <description align="left"  id="description7"/>
      <spec txt="Description:" id="project.desc" size="30" set=""/>
    </field>

    <field type="space" />

    <field type="staticText" align="left"  txt="Post installation options"  id="staticText.text4"/>
    <field type="divider" align="top"/>
    <field type="check" variable="POST_INSTALL_START_SERVICES">
      <description align="left" id="description8"/>
      <spec txt="Start services" id="install.path" true="true" false="" set="false"/>
    </field>
  </panel>
</userInput>
